{
  "**.js|ts|cjs|mjs|d.cts|d.mts|jsx|tsx|json|jsonc": [
    "biome check --files-ignore-unknown=true ./src",
    "biome check --apply --no-errors-on-unmatched ./src",
    "biome check --apply --organize-imports-enabled=false --no-errors-on-unmatched ./src", 
    "biome check --apply-unsafe --no-errors-on-unmatched ./src",
    "biome format --write --no-errors-on-unmatched ./src",
    "biome lint --apply --no-errors-on-unmatched ./src"
  ],
  "*": [
    "biome check --no-errors-on-unmatched --files-ignore-unknown=true ./src"
  ]
}